{
  "name": "nexusops-control-center",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise operations and compliance orchestration platform",
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "dev:web": "pnpm --filter @nexusops/web dev",
    "dev:api": "pnpm --filter @nexusops/api dev",
    "build": "pnpm --parallel run build",
    "lint": "pnpm --parallel run lint",
    "lint:fix": "pnpm --parallel run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm --parallel run test",
    "test:e2e": "pnpm --filter @nexusops/web test:e2e",
    "clean": "pnpm --parallel run clean && rm -rf node_modules",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:migrate": "pnpm --filter @nexusops/api db:migrate",
    "db:seed": "pnpm --filter @nexusops/api db:seed",
    "db:studio": "pnpm --filter @nexusops/api db:studio"
  },
  "keywords": [
    "enterprise",
    "operations",
    "compliance",
    "nextjs",
    "nestjs"
  ],
  "author": "",
  "license": "UNLICENSED",
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "eslint": "^10.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  }
}
